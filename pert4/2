#include <iostream>
using namespace std;


int main(){
   int menu;
   cout << setw(15) << setfill("=") << "" << endl;
   cout << "Selamat Datang" << endl;
   cout << setw(15) << setfill("=") << "" << endl;

   cout << "Menu: " << endl;
   cout << "1. Jenis Tiket" << endl;
   cout << "2. Daftar Hewan" << endl;
   cout << "Pilihan: " << endl;
   cin >> menu;

   if (menu==1){
      system("clear");
      cout << setw(15) << setfill("=") << "" << endl;
      cout << "Jenis tiket" << endl;
      cout << setw(15) << setfill("=") << "" << endl;


      cout << "1. Perorangan" << endl;
      cout << "2. Keluarga (min. 4 org)" << endl;
      cout << "3. Ekslusif" << endl;
      cout << "Pilihan: " << endl;
      int tiket;
      cin >> tiket;

      switch (tiket){
         case 1:
            cout << "Harga: 100K per orang" << endl;
            break;
         case 2:
            cout << "Harga: 80K per orang (min. 4 org)" << endl;
            break;
         case 3:
            cout << "Harga: 150K per orang" << endl;
            break;

         default:
            cout << "Pilihan tidak dalam daftar" << endl;
      }

      
   }
   else if (menu==2)
   {
      system("clear");
   }
   else cout << "Error";

   cout << endl;


   return 0;
}
